{
  // ----- Python & Conda -----
  "python.defaultInterpreterPath": "C:\\Users\\beall\\miniconda3\\envs\\analytics_portfolio\\python.exe",
  "python.terminal.activateEnvironment": true,

  // ----- Jupyter -----
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "jupyter.askForKernelRestart": false,

  // ----- Editor Quality of Life -----
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "charliermarsh.ruff",
  "python.formatting.provider": "none",
  "editor.tabSize": 4,

  // ----- Ruff: lint + format + organize imports -----
  "ruff.lint.enable": true,
  "ruff.format.enable": true,
  "ruff.organizeImports": true,

  // ----- Data Science Comfort -----
  "notebook.lineNumbers": "on",
  "notebook.cellToolbarVisibility": "hover",
  "notebook.output.textLineLimit": 50,

  // ----- Git / Version Control -----
  "git.autofetch": true,
  "git.confirmSync": false,

  // ----- Exclude -----
  "files.exclude": {
    "**/__pycache__": true,
    "**/.ipynb_checkpoints": true,
    "**/.pytest_cache": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.venv": true
  },

  // ----- Environment Manager (optional; safe defaults) -----
  "python-envs.defaultEnvManager": "ms-python.python:conda",
  "python-envs.defaultPackageManager": "ms-python.python:conda",
  "python-envs.pythonProjects": [],

  // ----- Jupyter Behavior -----
  "jupyter.interactiveWindow.textEditor.executeSelection": false

  // ----- Testing (enable later when tests/ folder is added) -----
  // "python.testing.pytestEnabled": true,
  // "python.testing.unittestEnabled": false,
  // "python.testing.pytestArgs": ["tests"]
}
